<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView_heavy_gear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="2dp"
    card_view:contentPadding="20dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativePrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgAcao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/brfs"/>

            <TextView
                android:id="@+id/cotacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="00.00"/>

            <TextView
                android:id="@+id/moeda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/cotacao"
                android:text="@string/moeda"/>

            <TextView
                android:id="@+id/codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@id/moeda"
                android:layout_toRightOf="@id/imgAcao"
                android:text="BRFS3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <TextView
                android:id="@+id/empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imgAcao"
                android:layout_toLeftOf="@id/moeda"
                android:layout_marginLeft="20dp"
                android:text="Brsil Foods S.A"
                android:layout_below="@id/codigo"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeSecundario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativePrincipal"
            android:layout_marginTop="20dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/txtMinimaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Mínima do Dia"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
            <TextView
                android:id="@+id/moedaMinimaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txtMinimaDia"
                android:text="@string/moeda"/>
            <TextView
                android:id="@+id/MinimaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMinimaDia"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/moedaMinimaDia"
                android:text="00.00"/>


            <TextView
                android:id="@+id/txtMaximaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="Máxima do Dia"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <TextView
                android:id="@+id/MaximaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txtMaximaDia"
                android:layout_marginLeft="5dp"
                android:text="00.00"/>

            <TextView
                android:id="@+id/moedaMaximaDia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMaximaDia"
                android:layout_toLeftOf="@id/MaximaDia"
                android:text="@string/moeda"/>

            <TextView
                android:id="@+id/txtMinimaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/MinimaDia"
                android:layout_marginTop="20dp"
                android:text="Mínima do Ano"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
            <TextView
                android:id="@+id/moedaMinimaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txtMinimaAno"
                android:text="@string/moeda"/>
            <TextView
                android:id="@+id/MinimaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMinimaAno"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/moedaMinimaAno"
                android:text="00.00"/>

            <TextView
                android:id="@+id/txtMaximaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/MinimaDia"
                android:layout_marginTop="20dp"
                android:text="Máxima do Ano"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <TextView
                android:id="@+id/MaximaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/txtMaximaAno"
                android:layout_marginLeft="5dp"
                android:text="00.00"/>

            <TextView
                android:id="@+id/moedaMaximaAno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMaximaAno"
                android:layout_toLeftOf="@id/MaximaAno"
                android:text="@string/moeda"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>

